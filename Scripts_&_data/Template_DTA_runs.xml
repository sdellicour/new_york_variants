			<trait name="location.states" tag="location">
				<ancestralTreeLikelihood idref="location.treeLikelihood"/>
			</trait>
			<!-- END Ancestral state reconstruction                                      -->
		</logTree>
	</mcmc>
	
	<report>
		<property name="timer">
			<mcmc idref="mcmc"/>
		</property>
	</report>
	
