						<parameter idref="location.clock.rate"/>
					</ctmcScale>
					<treeModel idref="treeModel"/>
				</ctmcScalePrior>
				<poissonPrior mean="1.0" offset="0.0">
					<statistic idref="location.nonZeroRates"/>
				</poissonPrior>
				<uniformPrior lower="0.0" upper="1.0">
					<parameter idref="location.frequencies"/>
				</uniformPrior>
				<cachedPrior>
