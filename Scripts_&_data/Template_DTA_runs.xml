		</upDownOperator>
 -->
		<scaleOperator scaleFactor="0.75" weight="15" scaleAllIndependently="true">
			<parameter idref="location.rates"/>
		</scaleOperator>
		<bitFlipOperator weight="7">
			<parameter idref="location.indicators"/>
		</bitFlipOperator>
		<deltaExchange delta="0.75" weight="1">
			<parameter idref="location.root.frequencies"/>
		</deltaExchange>
	</operators>

	<!-- Define MCMC                                                             -->
	<mcmc id="mcmc" chainLength="300000" autoOptimize="true" operatorAnalysis="TEMPLATE.ops">
